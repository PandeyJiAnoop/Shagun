                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                   
                    android:text="Particulars"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                   
                    android:text="N/A"
                    android:id="@+id/Particularstv"

                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                   
                    android:text="Transaction_Date"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                   
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/Transaction_Datetv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                   
                    android:text="Withdrawl_AMT"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                   
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/Withdrawl_AMTtv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                   
                    android:text="Deposited_AMT"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                   
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/Diposited_AMTtv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                   
                    android:text="Actual Receipt no"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                   
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/actualrecieptnotv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                   
                    android:text="Pay Mode"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                   
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/paymodetv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                   
                    android:text="Cheque no"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                   
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/chquenotv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                   
                    android:text="Introducer_ID"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                   
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/Introducer_IDtv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="0.1dp">
    </View>

    <!--    viewdetails layout-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/show_view_details_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Deposit Amount"
                    android:textColor="#2E2E2E"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Period(Month)"
                    android:gravity="center"
                    android:textColor="#2E2E2E"
                    android:textSize="13dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Maturity Date"
                    android:textColor="@color/blackone"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Maturity Amount"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="0.1dp">
            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/deposite_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="\u20B9 500.00"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/period_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="12"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/maturity_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="07-oct-2022"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/maturity_amount_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=" \u20B9 38250.00"
                    android:textSize="13dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="0.1dp">
            </View>
        </LinearLayout>

    </LinearLayout>

    <!--    Transaction history-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/show_history_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction History"
            android:padding="5dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textColor="@color/centerColor"
            android:textSize="18dp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="0.1dp">
        </View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wallet_histroy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/light_grey" />

</LinearLayout>