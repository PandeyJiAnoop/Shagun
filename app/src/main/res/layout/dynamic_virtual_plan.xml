<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:elevation="5dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:id="@+id/withdraw_ll"
                android:layout_gravity="center"
                android:background="@color/light_blue">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Withdraw Amount"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_above="@+id/withdraw_amount_tv"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/img_showProfile1"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:id="@+id/img_showProfile1"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/red"
                    android:src="@drawable/withdraw"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/withdraw_amount_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_showProfile1"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:text="00 \u20B9"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:tint="@color/red"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_marginTop="5dp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Member Id"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/userid_tv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Member Name"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:padding="8dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Branch"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:id="@+id/location_tv"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Plan Name"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/payable_to_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"

                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Bank"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:id="@+id/bank_tv"

                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="IFSC"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/ifsc_tv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Beneficiary"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/benf_tv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Purchased Date"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/m_date_tv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Account No."
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/account_tv"

                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Deposit Amount"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/m_deposit_tv"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Withdraw Amount"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/m_withdraw_tv"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Balance Amount"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/m_balance_tv"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />
            </LinearLayout>


            <View
            android:layout_width="match_parent"
            android:background="@color/background"
            android:layout_height="0.1dp">


        </View>






            <LinearLayout
                android:id="@+id/view_details_ll"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_transaction_credited_debited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="6dp"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    tools:ignore="SmallSp"
                    android:textStyle="bold"
                    android:text="View Transaction"
                    android:layout_marginRight="6dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:tint="@color/red"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:src="@drawable/down" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="0.1dp">
    </View>

    <!--    viewdetails layout-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/show_view_details_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Deposit Amount"
                    android:textColor="#2E2E2E"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Period(Month)"
                    android:gravity="center"
                    android:textColor="#2E2E2E"
                    android:textSize="13dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Maturity Date"
                    android:textColor="@color/blackone"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Maturity Amount"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="0.1dp">
            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/deposite_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="\u20B9 500.00"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/period_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="12"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/maturity_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="07-oct-2022"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/maturity_amount_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=" \u20B9 38250.00"
                    android:textSize="13dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="0.1dp">
            </View>
        </LinearLayout>

    </LinearLayout>

    <!--    Transaction history-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/show_history_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction History"
            android:padding="5dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textColor="@color/centerColor"
            android:textSize="18dp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="0.1dp">
        </View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wallet_histroy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/light_grey" />

</LinearLayout>