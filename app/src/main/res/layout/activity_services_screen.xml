<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/purple_500">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"

                android:padding="2dp"
                android:tint="@color/white"
                android:src="@drawable/back" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/ivBack"
                android:text="Our Services"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_below="@+id/rlHeader"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="160sp"
                android:id="@+id/banner_rl">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp">
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager"
                        android:background="@drawable/bannera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"

                    android:text="Recharge and Pay Bills Services"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            app:cardElevation="5dp"
                            android:layout_margin="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/mobilerecharge_ll"
                                android:layout_width="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/a_recharge" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textSize="12sp"
                                    android:gravity="center_horizontal"
                                    android:text="Mobile \nRecharge"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView   app:cardElevation="5dp"
                            android:layout_margin="1dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/billpayment_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"

                                    android:layout_gravity="center_horizontal"

                                    android:layout_margin="5dp"

                                    android:src="@drawable/a_bill" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"

                                    android:textSize="12sp"
                                    android:gravity="center_horizontal"
                                    android:text="Bill \nPayment"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"   app:cardElevation="5dp"
                            android:layout_margin="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/money_transfer_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"

                                    android:layout_gravity="center_horizontal"

                                    android:layout_margin="5dp"

                                    android:src="@drawable/a_moneytransfer" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"

                                    android:textSize="12sp"
                                    android:gravity="center_horizontal"
                                    android:text="Money \nTransfer"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"   app:cardElevation="5dp"
                            android:layout_margin="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/upiqrcode_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"

                                    android:layout_gravity="center_horizontal"

                                    android:layout_margin="5dp"

                                    android:src="@drawable/a_qrcode" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"

                                    android:textSize="12sp"
                                    android:gravity="center_horizontal"
                                    android:text="Dynamic UPI\nQR Code"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"   app:cardElevation="5dp"
                            android:layout_margin="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/creditscore_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"

                                    android:layout_gravity="center_horizontal"

                                    android:layout_margin="5dp"

                                    android:src="@drawable/a_creditscore" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"

                                    android:textSize="12sp"
                                    android:gravity="center_horizontal"
                                    android:text="Credit \nScore"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"   app:cardElevation="5dp"
                            android:layout_margin="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/upi_transfer_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"

                                    android:layout_gravity="center_horizontal"

                                    android:layout_margin="5dp"

                                    android:src="@drawable/a_upitransfer" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="UPI \nTransfer"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView></LinearLayout>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"   app:cardElevation="5dp"
                        android:layout_margin="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/otpverfication_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:layout_gravity="center_horizontal"

                                android:layout_margin="5dp"

                                android:src="@drawable/a_otpbase" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"

                                android:textSize="12sp"
                                android:gravity="center_horizontal"
                                android:text="OTP Base\nAadhar Verification"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"   app:cardElevation="5dp"
                        android:layout_margin="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/panverification_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:layout_gravity="center_horizontal"

                                android:layout_margin="5dp"

                                android:src="@drawable/a_pancard" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"

                                android:textSize="12sp"
                                android:gravity="center_horizontal"
                                android:text="Pan \nVerification"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"   app:cardElevation="5dp"
                        android:layout_margin="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/ifscverification_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:layout_gravity="center_horizontal"

                                android:layout_margin="5dp"

                                android:src="@drawable/a_ifsc" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:text="IFSC \nVerification "
                                android:textSize="12sp"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"   app:cardElevation="5dp"
                        android:layout_margin="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/accountverification_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:layout_gravity="center_horizontal"

                                android:layout_margin="5dp"

                                android:src="@drawable/a_moneytransfer" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"

                                android:textSize="12sp"
                                android:gravity="center_horizontal"
                                android:text="Account\nVerification"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"   app:cardElevation="5dp"
                        android:layout_margin="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/upi_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:layout_gravity="center_horizontal"

                                android:layout_margin="5dp"

                                android:src="@drawable/passwordchnage" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"

                                android:textSize="12sp"
                                android:gravity="center_horizontal"
                                android:text="UPI \nVerification"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/grey" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
