<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardElevation="20dp"
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:tint="@color/white"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />
            <TextView
                android:id="@+id/header_title"
                android:text="Virtual Account Plan"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/deposite_ll"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:background="@drawable/rect">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Deposit Amount"
                    android:textColor="@color/black"
                    android:layout_above="@+id/deposite_amount_tv"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/img_showProfile"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:id="@+id/img_showProfile"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:tint="@color/red"
                    android:src="@drawable/a_deposite"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:id="@+id/deposite_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_showProfile"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:text="00 \u20B9"
                    android:textSize="16dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="100dp"
                android:gravity="center"
                android:id="@+id/withdraw_ll"
                android:layout_gravity="center"
                android:background="@color/light_blue">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Withdraw Amount"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_above="@+id/withdraw_amount_tv"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/img_showProfile1"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:id="@+id/img_showProfile1"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/red"
                    android:src="@drawable/withdraw"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/withdraw_amount_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_showProfile1"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:text="00 \u20B9"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:tint="@color/red"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_marginTop="5dp" />

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:id="@+id/norecord_img"
                android:layout_width="match_parent"
                android:src="@drawable/norecord"
                android:padding="20dp"
                android:layout_height="match_parent">

            </ImageView>


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/srl_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wallet_histroy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </RelativeLayout>

    </LinearLayout>
           




</LinearLayout>
