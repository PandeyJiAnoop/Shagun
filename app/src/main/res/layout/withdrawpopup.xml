<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    android:layout_margin="1dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/withdraw_banner"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:padding="10dp"
                        android:tint="#0F2560"
                        android:id="@+id/ifsc_img"
                        android:src="@drawable/password"
                        android:layout_height="50dp">
                    </ImageView>
                    <View
                        android:layout_width="0.1dp"
                        android:id="@+id/view"
                        android:layout_toRightOf="@id/ifsc_img"
                        android:background="@color/grey"
                        android:layout_height="50dp">
                    </View>
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Enter Cifsc"
                        android:inputType="text"
                        android:maxLength="15"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:textColorHint="#AEACAC"
                        android:id="@+id/ifsc_et"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/view"
                        android:layout_height="50dp">
                    </EditText>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:elevation="5dp"
                app:cardCornerRadius="15dp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:padding="10dp"
                        android:tint="#0F2560"
                        android:id="@+id/accoount_no_img"
                        android:src="@drawable/withdraw"
                        android:layout_height="50dp">
                    </ImageView>
                    <View
                        android:layout_width="0.1dp"
                        android:id="@+id/view1"
                        android:layout_toRightOf="@id/accoount_no_img"
                        android:background="@color/grey"
                        android:layout_height="50dp">
                    </View>
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Enter Account Number"
                        android:inputType="number"
                        android:maxLength="24"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:textColorHint="#AEACAC"
                        android:id="@+id/accoount_no_et"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_height="50dp">
                    </EditText>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:elevation="5dp"
                app:cardCornerRadius="15dp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:padding="10dp"
                        android:tint="#0F2560"
                        android:id="@+id/name"
                        android:src="@drawable/a_loan_req"
                        android:layout_height="50dp">
                    </ImageView>
                    <View
                        android:layout_width="0.1dp"
                        android:id="@+id/view2"
                        android:layout_toRightOf="@id/name"
                        android:background="@color/grey"
                        android:layout_height="50dp">
                    </View>
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Enter Amount"
                        android:inputType="textPersonName"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:textColorHint="#AEACAC"
                        android:id="@+id/name_et"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/view2"
                        android:layout_height="50dp">
                    </EditText>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:gravity="center"
                app:cardCornerRadius="15dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:padding="10dp"
                        android:tint="#0F2560"
                        android:id="@+id/mobile_img"
                        android:src="@drawable/a_contact"
                        android:layout_height="50dp">
                    </ImageView>
                    <View
                        android:layout_width="0.1dp"
                        android:id="@+id/view3"
                        android:layout_toRightOf="@id/mobile_img"
                        android:background="@color/grey"
                        android:layout_height="50dp">
                    </View>
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Enter Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:textColorHint="#AEACAC"
                        android:id="@+id/mobile_et"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/view3"
                        android:layout_height="50dp">
                    </EditText>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:gravity="center"
                app:cardCornerRadius="15dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:padding="10dp"
                        android:tint="#0F2560"
                        android:id="@+id/amount"
                        android:src="@drawable/a_loan_req"
                        android:layout_height="50dp">
                    </ImageView>
                    <View
                        android:layout_width="0.1dp"
                        android:id="@+id/view4"
                        android:layout_toRightOf="@id/amount"
                        android:background="@color/grey"
                        android:layout_height="50dp">
                    </View>
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Enter amount"
                        android:inputType="number"
                        android:maxLength="6"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:textColorHint="#AEACAC"
                        android:id="@+id/amount_et"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/view4"
                        android:layout_height="50dp">
                    </EditText>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Select Payment Mode"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="50dp"
                        android:padding="10dp"
                        android:tint="#0F2560"
                        android:src="@drawable/a_loan"
                        android:layout_height="50dp"/>
                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />
                    <Spinner
                        android:id="@+id/tvSelectType"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:outlineSpotShadowColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:hint="Select Type"
                        android:textSize="16dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:id="@+id/tv"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="withdraw your money and payment request has reached to the admin and it takes 7-8 working days when you are going to withdraw.If this fails for any reason,you will receive a message from admin."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Submit_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/bg_btn"
                android:text="Submit"
                android:elevation="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>