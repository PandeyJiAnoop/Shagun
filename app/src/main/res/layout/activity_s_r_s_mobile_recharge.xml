<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/purple_500">
        <ImageView
            android:tint="@color/white"
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ivBack"
            android:text="Mobile Recharge"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:background="@drawable/offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone"
                android:background="@drawable/background"
                android:id="@+id/rl">
                <ImageView
                    android:id="@+id/img_showProfile"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:tint="@color/centerColor"
                    android:layout_marginLeft="120dp"
                    android:src="@drawable/ic_account_balance_wallet_black_24dp"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:id="@+id/deposite_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_showProfile"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="00.00 \u20B9"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="1dp"
                android:background="@drawable/rectangle_box"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/provider_ll"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/provoider_et"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:paddingRight="10dp"
                        android:drawableRight="@android:drawable/ic_menu_save"
                        android:text="Provider List"
                        android:layout_height="50dp">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/grey"
                        android:layout_height="1dp">
                    </View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/mob_et"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:paddingRight="10dp"
                        android:backgroundTint="@color/grey"
                        android:drawableRight="@drawable/ic_phone_android"
                        android:hint="Enter Mobile Number"
                        android:layout_height="50dp">
                    </EditText>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/grey"
                        android:layout_height="1dp">
                    </View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/amount_et"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:maxLength="5"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:paddingRight="10dp"
                        android:drawableRight="@android:drawable/ic_menu_month"
                        android:hint="Enter Plan Amount"
                        android:layout_height="50dp">
                    </EditText>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/pass_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Note:- Please take a screenshot if you have any issue during recharge"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/darkgray"
                android:textSize="12sp"/>
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="Pay"
                android:backgroundTint="@color/red"
                android:background="@drawable/gradient"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>