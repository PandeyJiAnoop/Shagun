<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/Member_Idtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SR. No. 1"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="@color/blue_light"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:elevation="5dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Member Name"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />
                <TextView
                    android:id="@+id/Member_nametv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Branch"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:id="@+id/Branchtv"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Father_name"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/father_nametv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"

                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Mobile"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:id="@+id/mobiletv"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/centerColor"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/gendertv"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    
                    android:text="Reg. Date"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:id="@+id/RegDatetv"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="0.1dp">


            </View>

            <LinearLayout
                android:id="@+id/view_details_ll"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rectangle"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_transaction_credited_debited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="6dp"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    tools:ignore="SmallSp"
                    android:textStyle="bold"
                    android:text="View Details"
                    android:layout_marginRight="6dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:tint="@color/red"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:src="@drawable/down" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="0.1dp">
    </View>

    <!--    viewdetails layout-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/show_view_details_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="1dp"
                        android:layout_height="wrap_content"
                        android:padding="13dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Deposit\nAmount"
                            android:textColor="#2E2E2E"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Period\n(Month)"
                            android:gravity="center"
                            android:textColor="#2E2E2E"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Maturity\nDate"
                            android:textColor="@color/blackone"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="Maturity\nAmount"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/grey"
                        android:layout_height="0.1dp">
                    </View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="1dp"
                        android:layout_height="wrap_content"
                        android:padding="13dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/deposite_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="\u20B9 500.00"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/period_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="12"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/maturity_date_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="07-oct-2022"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:maxLength="10"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/maturity_amount_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text=" \u20B9 38250.00"
                            android:textSize="13dp"
                            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:gravity="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/grey"
                        android:layout_height="0.1dp">
                    </View>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <!--    Transaction history-->

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/show_history_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction History"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textColor="@color/centerColor"
                    android:textSize="18dp" />
                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_height="0.1dp">
                </View>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wallet_histroy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/light_grey" />

</LinearLayout>